/* pages/index/index.wxss */
.weather-wrapper{
  width: 750rpx;
  height: 760rpx;
  position: relative;
}
.title{
  font-size: 200rpx;
  line-height: 280rpx;
  text-align: center;
  opacity: .8;
  padding-top: 30%;
}
.weather{
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  opacity: .65;
}
.weather-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}