/* pages/index/index.wxss */
.weather-wrapper{
  width: 750rpx;
  height: 760rpx;
  position: relative;
}
.title{
  font-size: 200rpx;
  line-height: 280rpx;
  text-align: center;
  opacity: .8;
  padding-top: 30%;
}
.weather{
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  opacity: .65;
}
.weather-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}
.weather-subwrapper{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border-top: 1px solid silver;
  position: absolute;
  left: 0;
  bottom:0;
  display: flex;
  justify-content: space-around;
}
.forecast-title{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: .8;
  position: relative;
  text-align: center;
  padding-left: 50rpx;
  box-sizing: border-box;
  margin-top: 60rpx;
  opacity: .6;
}
.time-icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 220rpx;
}
.forecast-list{
  display: flex;
  font-size: 30rpx;
  opacity: .7;
}
.forecast-list view{
  margin-bottom: 40rpx;
}
.forecast-item{
  display: block;
  width: 500rpx;
  height: 300rpx;
  text-align: center;
}
.forecast-weather{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 40rpx;
}